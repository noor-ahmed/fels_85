<% provide :title, t(:categories) %>
<h1><%= t :categories %></h1>
<ul class="category">
  <div>
    <% @categories.each do |category| %>
      <p><strong><%= category.name.upcase %></strong></p>
    <div>
      <% category.words.each do |word|%>
        <%= word.content%>
      <% end %>
    </div>
    <div>
      <%= form_tag({controller: :lessons, action: :create}, method: :post) do %>
      <div>
        <%= hidden_field_tag(:category_id, category.id) %>
        <%= submit_tag "Start lesson", class: "btn btn-primary" %>
        <% if current_user.admin? %>
          <%= link_to t(:add_words), "#" %> |
          <%= link_to t(:delete), category, method: :delete, data: { confirm: (t :remove_confirmation) } %>
        <% end %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</ul>