<% provide :title, t(:wordlist) %>

<% if params[:category_id].present? %>
  <h1><%= @category.name %> - <%= t :wordlist %></h1>
  <p><%= t :cat1 %> "<%= @category.name %>" <%= params[:word_stat] %> <%= t :cat2 %></p>
<% else %>
  <h1><%= t :wordlist %></h1>
  <p><%= t :ppuyi %></p>
<% end %>

<%= form_tag words_path, method: :get do %>
  <div>
    <%= label_tag :category_id, t(:lsncat) %>
    <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name) %>

    <%= label_tag :word_stat, t(:wdstat) %>
    <%= radio_button_tag :word_stat, :learned %>
    <%= label_tag :word_stat_learned, t(:_learned) %>
    <%= radio_button_tag :word_stat, :not_learned %>
    <%= label_tag :word_stat_not_learned, t(:_n_learned) %>
    <%= radio_button_tag :word_stat, :all, default=true %>
    <%= label_tag :word_stat_all, t(:_all) %>

    <%= submit_tag t(:filter), class: "btn btn-primary" %>
  </div>
<% end %>

<% unless @words.blank? %>
  <table>
    <tr>
      <td><%= t :word %></td>
      <td><%= t :equivalent %></td>
    </tr>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.content %></td>
        <td><%= word.word_answers.correct_content %></td>
      </tr>
    <% end %>
  </table>
<% end %>