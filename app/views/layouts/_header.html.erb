<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to (t :home), root_path %></li>
        <% if logged_in? %>
            <li><%= link_to (t :learner), users_path  %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to (t :profile), current_user %></li>
                <li><%= link_to (t :settings), "#" %></li>
                <li><%= link_to (t :lesson), "#" %></li>
                <li><%= link_to (t :result), "#" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to (t :logout), logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to (t :login), login_path %></li>
            <li><%= link_to (t :signup), signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

